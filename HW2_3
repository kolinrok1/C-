bool wek (int numberB)
{
    bool TiF = false;
    if (numberB <= 5 )
{
    TiF= false;
}
if (numberB>5) 
{
    TiF = true;
}
return TiF;
}

Console.WriteLine ("Введите число:");
int numberA = Convert.ToInt32 (Console.ReadLine());
if (numberA < 8 )
{
    bool kl = wek(numberA);
         if (kl == false)
        {
            Console.WriteLine( "Рабочий день");
        }
    else  if (kl == true)
        {
            Console.WriteLine( "Выходной");
        }
}
else
{
    Console.WriteLine( "Введите число от 1 до 7");
}
